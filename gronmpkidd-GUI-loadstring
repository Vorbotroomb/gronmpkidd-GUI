--[[ 
    TEAM GRONMPKIDD - OFFICIAL GUI 
    Configurado para: Backdoored Games & Chaos
]]

local ScreenGui = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")
local UIListLayout = Instance.new("UIListLayout")
local Title = Instance.new("TextLabel")

-- Setup da GUI
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
ScreenGui.Name = "Gronmpkidd_Official"

MainFrame.Name = "MainFrame"
MainFrame.Parent = ScreenGui
MainFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
MainFrame.BorderSizePixel = 2
MainFrame.BorderColor3 = Color3.fromRGB(255, 0, 0)
MainFrame.Position = UDim2.new(0.5, -90, 0.4, -100)
MainFrame.Size = UDim2.new(0, 180, 0, 260)
MainFrame.Active = true
MainFrame.Draggable = true

UIListLayout.Parent = MainFrame
UIListLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
UIListLayout.Padding = UDim.new(0, 5)
UIListLayout.SortOrder = Enum.SortOrder.LayoutOrder

Title.Parent = MainFrame
Title.Size = UDim2.new(1, 0, 0, 35)
Title.Text = "GRONMPKIDD HUB"
Title.TextColor3 = Color3.fromRGB(255, 0, 0)
Title.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
Title.Font = Enum.Font.SourceSansBold
Title.TextSize = 18

-- Configura√ß√µes de IDs
local ID_IMAGEM = "rbxassetid://134142612717309"
local ID_MUSICA = "rbxassetid://104357803186796"

-- Fun√ß√£o Criadora de Bot√µes
local function addBtn(txt, callback)
    local b = Instance.new("TextButton")
    b.Parent = MainFrame
    b.Size = UDim2.new(0.9, 0, 0, 35)
    b.Text = txt
    b.BackgroundColor3 = Color3.fromRGB(40, 0, 0)
    b.TextColor3 = Color3.fromRGB(255, 255, 255)
    b.Font = Enum.Font.SourceSansBold
    b.MouseButton1Click:Connect(callback)
end

--- COMANDOS DO TIME ---

addBtn("üì¢ HINT MESSAGE", function()
    local h = Instance.new("Hint", game.Workspace)
    h.Text = "GRONMPKIDD HACKED TS GAME UP!!!"
    task.wait(10)
    h:Destroy()
end)

addBtn("üñºÔ∏è DECAL SPAM", function()
    for _, obj in pairs(game.Workspace:GetDescendants()) do
        if obj:IsA("BasePart") then
            for _, face in pairs(Enum.NormalId:GetEnumItems()) do
                local d = Instance.new("Decal")
                d.Texture = ID_IMAGEM
                d.Face = face
                d.Parent = obj
            end
        end
    end
end)

addBtn("üåå CHANGE SKY", function()
    local s = Instance.new("Sky", game.Lighting)
    s.SkyboxBk = ID_IMAGEM
    s.SkyboxDn = ID_IMAGEM
    s.SkyboxFt = ID_IMAGEM
    s.SkyboxLf = ID_IMAGEM
    s.SkyboxRt = ID_IMAGEM
    s.SkyboxUp = ID_IMAGEM
end)

addBtn("‚ú® PARTICLES", function()
    for _, p in pairs(game.Players:GetPlayers()) do
        if p.Character and p.Character:FindFirstChild("HumanoidRootPart") then
            local pe = Instance.new("ParticleEmitter", p.Character.HumanoidRootPart)
            pe.Texture = ID_IMAGEM
            pe.Size = NumberSequence.new(3)
            pe.Rate = 100
        end
    end
end)

addBtn("üé∂ PLAY MUSIC", function()
    local snd = Instance.new("Sound", game.Workspace)
    snd.SoundId = ID_MUSICA
    snd.Volume = 3
    snd.Looped = true
    snd:Play()
end)

addBtn("‚ùå DESTROY GUI", function()
    ScreenGui:Destroy()
end)
