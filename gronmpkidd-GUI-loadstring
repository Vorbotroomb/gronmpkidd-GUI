-- INTERFACE
local sg = Instance.new("ScreenGui", pg)
sg.Name = "GronmpMenu"
sg.ResetOnSpawn = false

-- BOTÃO ABRIR/FECHAR (NA DIREITA)
local ab = Instance.new("TextButton", sg)
ab.Size = UDim2.new(0, 110, 0, 40)
ab.Position = UDim2.new(1, -120, 0.4, 0)
ab.Text = "GRONMP MENU"
ab.BackgroundColor3 = Color3.new(0.4, 0, 0)
ab.TextColor3 = Color3.new(1, 1, 1)
ab.Font = Enum.Font.Code

-- MENU PRINCIPAL
local m = Instance.new("Frame", sg)
m.Size = UDim2.new(0, 170, 0, 310)
m.Position = UDim2.new(1, -180, 0.46, 0)
m.BackgroundColor3 = Color3.new(0, 0, 0)
m.Visible = false
local layout = Instance.new("UIListLayout", m)
layout.Padding = UDim.new(0, 2)

local function btn(txt, f)
    local b = Instance.new("TextButton", m)
    b.Size = UDim2.new(1, 0, 0, 38)
    b.Text = txt
    b.BackgroundColor3 = Color3.new(0.1, 0, 0)
    b.TextColor3 = Color3.new(1, 1, 1)
    b.Font = Enum.Font.Code
    b.MouseButton1Click:Connect(f)
end

