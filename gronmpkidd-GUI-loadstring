-- DESTROI SE JÁ EXISTIR
local p = game:GetService("Players").LocalPlayer
local pg = p:WaitForChild("PlayerGui")
if pg:FindFirstChild("GronmpMenu") then pg.GronmpMenu:Destroy() end

-- ASSETS (Usando o seu ID)
